<% layout("/layouts/boilerplate.ejs")%>
<%= success %>
<h1>All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing </button>
    </form> -->
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(list of allListings){%>
    <a href="/listings/<%=list._id%>" class="listing-link">
        <div class="card col listing-card" >
            <img src="<%= list.image %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
            <div class="card-img-overlay">

            </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= list.title%></b> 
                    <br>
                    &#8377; 
                    <%= list.price.toLocaleString("en-IN")%> / night 
                </p>
            </div>
        </div>
    </a>
    <%}%>
</div>   




